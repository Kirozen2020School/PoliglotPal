<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translate this sentence"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            tools:ignore="HardcodedText"
            android:layout_marginLeft="5sp"

            />

        <ImageButton
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:id="@+id/btnExitFromTranslateSentence"
            android:src="@drawable/xicon"
            android:scaleType="centerCrop"
            android:layout_marginTop="17sp"
            android:layout_marginLeft="10sp"
            tools:ignore="ContentDescription" 
            />
    </LinearLayout>
    

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="He likes to swim"
        android:textSize="20sp"
        android:id="@+id/tvSentence"
        tools:ignore="HardcodedText" 
        android:layout_marginLeft="10sp"
        />

    //here need to be aded the words for the task

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
    
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/btnCheck"
            android:layout_gravity="center"
            tools:ignore="HardcodedText" 
        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:id="@+id/btnClearAns"
            tools:ignore="HardcodedText" 
            />
    </LinearLayout>
    
</LinearLayout>