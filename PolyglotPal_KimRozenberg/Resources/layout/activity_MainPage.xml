<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#13A90A"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Hi *username*"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/tvHiUsernameHomePage"
            android:layout_marginLeft="5sp"
            tools:ignore="HardcodedText" 
            />
        <TextView
            android:layout_width="80sp"
            android:layout_height="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total points: 999"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/tvTotalPointsHomePage"
            tools:ignore="HardcodedText" 
            />


    </LinearLayout>

    <ImageButton
        android:layout_width="30sp"
        android:layout_height="40sp"
        android:src="@drawable/abc_ic_menu_overflow_material"
        android:id="@+id/btnPopMenu"
        tools:ignore="ContentDescription" 
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="110sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task1"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/btnTask1"
            tools:ignore="HardcodedText" 
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task2"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/btnTask2"
            tools:ignore="HardcodedText"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task3"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/btnTask3"
            tools:ignore="HardcodedText"
            />

    </LinearLayout>
    <TextView
        android:layout_width="1sp"
        android:layout_height="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
    
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task4"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/btnTask4"
            tools:ignore="HardcodedText"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task5"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/btnTask5"
            tools:ignore="HardcodedText"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task6"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/btnTask6"
            tools:ignore="HardcodedText"
            />

    </LinearLayout>
    <TextView
        android:layout_width="1sp"
        android:layout_height="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
    
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task7"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/btnTask7"
            tools:ignore="HardcodedText"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task8"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/btnTask8"
            tools:ignore="HardcodedText"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task9"
            android:textStyle="bold"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/btnTask9"
            tools:ignore="HardcodedText"
            />

    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="310sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E79300"
        android:id="@+id/lyBottomLine">

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/haticon"
            android:background="#E79300"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" 
            />

        <TextView
            android:layout_width="280sp"
            android:layout_height="1sp"/>

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/profileicon"
            android:id="@+id/btnGoToProfilePageFromTaskPage"
            android:background="#E79300"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" 
            />
    </LinearLayout>
</LinearLayout>
