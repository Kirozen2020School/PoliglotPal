<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:id="@+id/lyBackgroundMainPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#13A90A"
        android:orientation="horizontal"
        android:id="@+id/lyInfoMainPage"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Hi *username*"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/tvHiUsernameHomePage"
            android:layout_marginLeft="5sp"
            tools:ignore="HardcodedText" 
            />
        <TextView
            android:layout_width="80sp"
            android:layout_height="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total points: 999"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/tvTotalPointsHomePage"
            tools:ignore="HardcodedText" 
            />


    </LinearLayout>

    <ImageButton
        android:layout_width="30sp"
        android:layout_height="40sp"
        android:src="@drawable/abc_ic_menu_overflow_material"
        android:id="@+id/btnPopMenu"
        tools:ignore="ContentDescription" 
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whitebed"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnDailyActivity"
                    />
                <TextView
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>
                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whitecar"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnTravel"
                    />
                <TextView
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>
                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whiteeducetion"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnEducation"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="30sp"
                android:layout_height="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whiteski"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnHoobies"
                    />
                <TextView
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>
                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whiteaid"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnHealth"
                    />
                
            </LinearLayout>

            <TextView
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whitefamily"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnfamily"
                    />
                <TextView
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>
                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whitecoin"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnBusiness"
                    />
                <TextView
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>
                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whiteguitar"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnMusic"
                    />
            </LinearLayout>
            
            <TextView
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whitecat"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnAnimals"
                    />
                <TextView
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>
                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whitecake"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnFood"
                    />
            </LinearLayout>
            
            <TextView
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whitesofa"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnFurniture"
                    />
                <TextView
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>
                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whitepace"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnEmotions"
                    />
                <TextView
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>
                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whiteflag"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnCountries"
                    />
            </LinearLayout>
            
            <TextView
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whitetools"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnTools"
                    />
                <TextView
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>
                <ImageButton
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:src="@drawable/whiteshurt"
                    android:scaleType="fitXY"
                    android:background="#000000"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    android:id="@+id/btnClothing"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    

    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#7A7A7A"
        android:id="@+id/lyBottomLine">

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/hat"
            android:id="@+id/btnGoToTaskPageFromTaskPage"
            android:background="#7A7A7A"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" 
            />

        <TextView
            android:layout_width="115sp"
            android:layout_height="50sp"/>

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/net"
            android:id="@+id/btnGoToLeaderBoardPageFromTaskPage"
            android:background="#7a7a7a"
            android:scaleType="fitXY"
            android:contentDescription="description"
            tools:ignore="HardcodedText"
            />

        <TextView
            android:layout_width="115sp"
            android:layout_height="50sp"/>

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/blackprofile"
            android:id="@+id/btnGoToProfilePageFromTaskPage"
            android:background="#7A7A7A"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription" 
            />
    </LinearLayout>
</LinearLayout>
