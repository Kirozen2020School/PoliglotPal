<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_gravity="start"
            tools:ignore="HardcodedText" />

        <ProgressBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:max="600"
            android:progress="600"
            android:id="@+id/progressSound"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_gravity="end"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50sp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tap the matching pairs"
            android:textColor="#fff"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="8sp" />

        <ImageButton
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:id="@+id/btnExitFromSoundPage"
            android:background="#000000"
            android:src="@drawable/exit"
            android:scaleType="centerCrop"
            android:layout_marginTop="22sp"
            android:layout_marginRight="10sp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <!-- buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="vertical"
        android:layout_weight="10">
    
        <!-- Pair 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            
            <ImageButton
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background="@drawable/round_buttons"
                android:src="@drawable/sound3"
                android:scaleType="centerInside"
                android:layout_marginLeft="10sp"
                android:layout_margin="10sp"
                android:textColor="@android:color/transparent"
                android:id="@+id/btnENG1Sound"
                android:tag="it's a test string that might be invisable"
                />
            <TextView
                    android:layout_width="20sp"
                    android:layout_height="1sp"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background ="@drawable/round_buttons"
                android:text="pair 1 heb"
                android:textColor="#000"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="2sp"
                android:layout_marginRight="15sp"
                android:layout_margin="10sp"
                android:id="@+id/btnHE1Sound"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Pair 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background="@drawable/round_buttons"
                android:src="@drawable/sound3"
                android:scaleType="centerInside"
                android:layout_marginLeft="10sp"
                android:layout_margin="10sp"
                android:textColor="@android:color/transparent"
                android:id="@+id/btnENG2Sound"
                android:tag="it's a test string that might be invisable"
                />

            <TextView
                android:layout_width="20sp"
                android:layout_height="1sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background ="@drawable/round_buttons"
                android:text="pair 2 heb"
                android:textColor="#000"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="2sp"
                android:layout_marginRight="15sp"
                android:layout_margin="10sp"
                android:id="@+id/btnHE2Sound"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Pair 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background="@drawable/round_buttons"
                android:src="@drawable/sound3"
                android:scaleType="centerInside"
                android:layout_marginLeft="10sp"
                android:layout_margin="10sp"
                android:textColor="@android:color/transparent"
                android:id="@+id/btnENG3Sound"
                android:tag="it's a test string that might be invisable"
                />

            <TextView
                android:layout_width="20sp"
                android:layout_height="1sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background ="@drawable/round_buttons"
                android:text="pair 3 heb"
                android:textColor="#000"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="2sp"
                android:layout_marginRight="15sp"
                android:layout_margin="10sp"
                android:id="@+id/btnHE3Sound"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Pair 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background="@drawable/round_buttons"
                android:src="@drawable/sound3"
                android:scaleType="centerInside"
                android:layout_marginLeft="10sp"
                android:layout_margin="10sp"
                android:textColor="@android:color/transparent"
                android:id="@+id/btnENG4Sound"
                android:tag="it's a test string that might be invisable"
                />

            <TextView
                android:layout_width="20sp"
                android:layout_height="1sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background ="@drawable/round_buttons"
                android:text="pair 4 heb"
                android:textColor="#000"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="2sp"
                android:layout_marginRight="15sp"
                android:layout_margin="10sp"
                android:id="@+id/btnHE4Sound"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Pair 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:layout_width="0sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background="@drawable/round_buttons"
                android:src="@drawable/sound3"
                android:scaleType="centerInside"
                android:layout_marginLeft="10sp"
                android:layout_margin="10sp"
                android:textColor="@android:color/transparent"
                android:id="@+id/btnENG5Sound"
                android:tag="it's a test string that might be invisable"
                />

            <TextView
                android:layout_width="20sp"
                android:layout_height="1sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:background ="@drawable/round_buttons"
                android:text="pair 5 heb"
                android:textColor="#000"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeTextType="uniform"
                android:autoSizeStepGranularity="2sp"
                android:layout_marginRight="15sp"
                android:layout_margin="10sp"
                android:id="@+id/btnHE5Sound"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>


    <!-- Continue button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            >
	        <Button
		        android:layout_width="0dp"
		        android:layout_height="50sp"
		        android:layout_weight="2"
		        android:layout_gravity="center"
                android:background="@drawable/clicked_round_buttons"
		        android:enabled="false"
		        android:id="@+id/btnNextLevelSound"
		        android:text="Continue"
		        android:textColor="#404040"
		        android:textSize="15sp"
		        android:textStyle="bold"
                android:layout_margin="20sp"
		        tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>
   

</LinearLayout>