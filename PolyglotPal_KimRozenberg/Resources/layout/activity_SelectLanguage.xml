<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Language"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:textColor="#fff"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:padding="10sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_LinearLayout"
                android:layout_marginVertical="10sp"
                >
                <ImageButton
                    android:layout_width="120sp"
                    android:layout_height="80sp"
                    android:src="@drawable/israel"
                    android:id="@+id/btnSelectIsraelImage"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20sp"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    />
                <TextView
                    android:layout_width="10sp"
                    android:layout_height="1sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80sp"
                    android:gravity="center_vertical"
                    android:text="Hebrew from English"
                    android:id="@+id/btnSelectIsraelText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_LinearLayout"
                android:layout_marginVertical="10sp"
                >
                <ImageButton
                    android:layout_width="120sp"
                    android:layout_height="80sp"
                    android:src="@drawable/ukraine"
                    android:id="@+id/btnSelectUkranianImage"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20sp"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    />
                <TextView
                    android:layout_width="10sp"
                    android:layout_height="1sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80sp"
                    android:gravity="center_vertical"
                    android:text="Ukranian from English"
                    android:id="@+id/btnSelectUkranianText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_LinearLayout"
                android:layout_marginVertical="10sp"
                >
                <ImageButton
                    android:layout_width="120sp"
                    android:layout_height="80sp"
                    android:src="@drawable/russia"
                    android:id="@+id/btnSelectRussiaImage"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20sp"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    />
                <TextView
                    android:layout_width="10sp"
                    android:layout_height="1sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80sp"
                    android:gravity="center_vertical"
                    android:text="Russian from English"
                    android:id="@+id/btnSelectRussiaText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_LinearLayout"
                android:layout_marginVertical="10sp"
                >
                <ImageButton
                    android:layout_width="120sp"
                    android:layout_height="80sp"
                    android:src="@drawable/yiddish"
                    android:id="@+id/btnSelectYiddishImage"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20sp"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    />
                <TextView
                    android:layout_width="10sp"
                    android:layout_height="1sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80sp"
                    android:gravity="center_vertical"
                    android:text="Yiddish from English"
                    android:id="@+id/btnSelectYiddishText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_LinearLayout"
                android:layout_marginVertical="10sp"
                >
                <ImageButton
                    android:layout_width="120sp"
                    android:layout_height="80sp"
                    android:src="@drawable/germany"
                    android:id="@+id/btnSelectGermanyImage"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20sp"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    />
                <TextView
                    android:layout_width="10sp"
                    android:layout_height="1sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80sp"
                    android:gravity="center_vertical"
                    android:text="Germany from English"
                    android:id="@+id/btnSelectGermanyText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/round_LinearLayout"
                android:layout_marginVertical="10sp"
                >
                <ImageButton
                    android:layout_width="120sp"
                    android:layout_height="80sp"
                    android:src="@drawable/poland"
                    android:id="@+id/btnSelectPolishImage"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="20sp"
                    android:contentDescription="description"
                    tools:ignore="HardcodedText" 
                    />
                <TextView
                    android:layout_width="10sp"
                    android:layout_height="1sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="80sp"
                    android:gravity="center_vertical"
                    android:text="Polish from English"
                    android:id="@+id/btnSelectPolishText"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10sp"
        >
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/btnCancelSelectionLanguage"
            tools:ignore="HardcodedText" 
            />
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
