<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lyLeaderBoardBackground"
    android:background="#000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lyTopLineLeaderBoardPage"
        android:background="#13A90A"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi: *username*"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="10sp"
            android:id="@+id/tvUserNameLeaderBoardPage"
            tools:ignore="HardcodedText" 
            android:layout_weight="1"
            android:gravity="start"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Points: 999"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/tvXPLeaderBoardPage"
            tools:ignore="HardcodedText" 
            android:layout_weight="1"
            android:gravity="end"
            android:paddingRight="10sp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You'r current position: X"
        android:id="@+id/tvCurrentPositionLeaderboard"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" 
        android:textColor="#fff"
        android:padding="20sp"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="635sp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:id="@+id/lsLeaderboard"
        android:layout_weight="1"
        >
        
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#7A7A7A"
        android:id="@+id/lyBottomLineLeaderBoardPage">

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/hat"
            android:id="@+id/btnGoToTaskPageFromLeaderBoardsPage"
            android:background="#7A7A7A"
            android:scaleType="fitCenter"
            android:contentDescription="description"
            tools:ignore="HardcodedText" 
            android:layout_weight="1"
            
            />


        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/net"
            android:id="@+id/btnGoToLeaderboardFromLeaderboardPage"
            android:background="#7a7a7a"
            android:scaleType="fitCenter"
            android:contentDescription="description"
            tools:ignore="HardcodedText"
            android:layout_weight="1"
            />


        <ImageButton
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/blackprofile"
            android:id="@+id/btnGoToProfilePageFromLeaderBoardsPage"
            android:background="#7A7A7A"
            android:scaleType="fitCenter"
            android:contentDescription="description"
            tools:ignore="HardcodedText" 
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
